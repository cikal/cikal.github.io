---
layout: null
---
{
  "version": "https://jsonfeed.org/version/1",
  "title": "{{ site.title }}",
  "home_page_url": "{{ site.url }}/",
  "feed_url": "{{ site.url }}/feed.json",
  "description": "{{ site.description }}",
  "favicon": "{{ site.url }}/assets/icons/favicon-96x96.png",
  "icon": "{{ site.url }}/assets/icons/apple-touch-icon.png",
  "author": {
      "name": "{{ site.author }}",
      "url": "{{ site.url }}"
  },
  "expired": "false",
  "items": [{% for post in site.posts limit:15 %}
    {
      "id": "{{ post.id }}",
      "url": "{{ site.url }}{{ post.url }}",
      "title": "{{ post.title }}",
      "content": "{{ post.excerpt | strip_html | trim }}",
      {% if post.thumbnail %}"thumbnail": "{{ site.url }}{{ post.thumbnail }}",{% endif %}
      {% if post.tags %}"tags":  ["{{post.tags | join: '","'}}"],{% endif %}
      "date_published": "{{ post.date | date: "%d %b %Y" }}"
    }{% unless forloop.last == true %},{% endunless %}
  {% endfor %}]
}